<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ivan.pronin.c2.accounting.model.TestProduct" table="test_product" schema="2c_accounting">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="decimal(20)" precision="20" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>